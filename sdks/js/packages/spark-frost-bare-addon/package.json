{
  "name": "@buildonspark/spark-frost-bare-addon",
  "version": "0.0.3",
  "description": "Example Bare addon",
  "license": "Apache-2.0",
  "homepage": "https://github.com/buildonspark/spark",
  "exports": {
    "./package": "./package.json",
    ".": "./index.js"
  },
  "files": [
    "index.js",
    "binding.c",
    "binding.js",
    "CMakeLists.txt",
    "prebuilds"
  ],
  "addon": true,
  "scripts": {
    "build": "./build.sh",
    "test": "bare ./test.js",
    "format:fix": "prettier . --write",
    "format": "prettier . --check",
    "package:checks": "yarn publint && yarn attw --pack . && echo \"\nPackage checks passed successfully!\"",
    "postversion": "yarn build"
  },
  "installConfig": {
    "hoistingLimits": "dependencies"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@noble/curves": "^1.8.0",
    "@noble/secp256k1": "^2.3.0",
    "bare": "^1.23.3",
    "bare-crypto": "^1.9.2",
    "bare-fs": "^4.1.6",
    "bare-make": "^1.5.1",
    "cmake-bare": "^1.6.5",
    "cmake-cargo": "^0.0.5",
    "cmake-npm": "^1.1.0",
    "prettier": "^3.6.2",
    "prettier-config-standard": "^7.0.0",
    "publint": "^0.3.9"
  }
}
